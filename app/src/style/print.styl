@import 'variable'

secondaryColor = #888
fontSize = 15px

html 
  background transparent

body
  padding 50px
  background transparent

  *
    font-family Verdana
    font-size fontSize

  h1 
    font-size fontSize*1.4
    font-weight normal
    margin 30px 0 0
    text-align center

  label
    padding-right 30px
    width 100px
    text-align right
    display inline-block

  > *
    margin-top 30px 

  .pre-filled
    margin-top 120px
    
  .last
    text-align right

  .input
    display inline-block
    width 180px
    margin 0 0.5em -4px
    border-bottom 1px dashed #888

  .who, .when, .what, .input
    line-height 2.5em

  .btn
    position absolute
    left 46%
    color emphasisColor
    background-color primaryBtnBackgroundHover
    background-image primaryBtnBackground
    cursor pointer
    text-shadow 0 -1px 0 rgba(0, 0, 0, 0.25)
    padding 4px 12px
    margin-bottom 0
    font-size fontSize
    line-height 20px
    text-align center
    vertical-align middle
    border 1px solid #cccccc
    border-radius 3px
    box-shadow inset 0 1px 0 rgba(255,255,255,.2), 0 1px 2px rgba(0,0,0,.05)

  .btn:hover, .btn:focus, .btn:active, .btn.active
    background-color primaryBtnBackgroundHover
    outline 0