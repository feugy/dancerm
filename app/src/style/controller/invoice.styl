/******************************************************************************
 * Invoice edition
 */

.invoice

  .invoice-title
    border-top 2px solid headingColor
    margin 10px 0 0
    padding 0 1em
    position relative

    > h2
      align-items center
      background mainBackground
      border none
      display inline-flex
      font-size fontSize*1.6
      left 25px
      line-height 10px
      padding 0 5px
      position relative
      white-space nowrap
      top -1em

      > input
        flex-grow 1
        font-size 1em
        min-width 0
        padding .1em

    label
      margin 0 0.5em 0 0
      vertical-align -1px

    .suggested
      color warningColor

    input[type=checkbox]
      margin-right .5em
      vertical-align -3px

  .preview
    background white
    box-shadow 0 10px 15px emphasisColor
    color black
    padding 25px

    .customer > *
    .school > *
    input
    .date > span
    .input-group > *
      font-family Verdana
      font-size 16px

    .input-group input:not(:hover):not(:focus):not(.ng-invalid)
    input:not(:hover):not(:focus):not(.ng-invalid)
    textarea:not(:hover):not(:focus):not(.ng-invalid)
      color black
      border-color transparent

    .input-group .input-group-addon
      background-color rgba(black, 0.07)
      border-color transparent
      color black
      vertical-align top
      line-height 1.2em

      > .glyphicon
        left -5px
        top 0

    input[type=text]:focus
    input[type=number]:focus
    textarea:focus
      box-shadow none

    input:hover:not(:focus)
    textarea:hover:not(:focus)
      border-color transparent
      background-color rgba(black, 0.07)

    p
      margin 0 0 0.5em 0
    p:last-child
      margin-bottom 0

    .date
      display flex
      justify-content flex-end
      margin 2em 0 0
      padding 0
      width 100%

      .input-group-addon
        display inline-block

      .dropdown-menu
        left auto !important
        right 14px

    header
      display flex
      margin 0
      width 100%
      justify-content space-between

      .logo
        width 65px
        height 60px

      .school
      .customer
        padding 5px
        width 40%
        margin 0

        > p
          margin 0

        > p:first-child
          font-weight bold
          font-size 110

  .customer
    .zip-and-city
      display flex

      > input:first-child
        width 82px

        &::-webkit-outer-spin-button
        &::-webkit-inner-spin-button
          -webkit-appearance: none
          margin: 0

      > input:last-child
        flex-grow 1