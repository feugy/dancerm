/******************************************************************************
 * Settings
 */

.settings.main
  overflow-y auto

  .teacher-grid
    justify-content space-around
    display flex
    flex-wrap wrap
    padding 0

    > *
      width calc(50% - 2em)
      min-width 430px
      margin 1em
      text-align center

    .teacher
      background-color colBackground
      text-align left
      padding 1em

      .remove
        float left

      .form-group
        display flex
        align-items center

        > label
          display inline-block
          flex-grow 0
          flex-shrink 0
          margin 0
          padding-right 1em
          text-align right
          width 25%

          &:not(:first-child)
            width 15%

        > *
          flex-grow 1
          min-width 0

  > section
    display flex
    padding 0

    > :not(aside)
      display inline-block
      flex 1
      margin 0 .5em
      padding 1em

    input
      height 30px

    .no-vat-mention input
      min-width 300px

  > section:not(:first-child) > :not(aside)
    border-top 1px solid headingColor

  .form-group:last-child
    margin-bottom 0

  aside
    width 200px
    flex-shrink 0
    padding 1em
    margin 0
    border-right 1px solid headingColor
    background colBackground

    > h2
      margin 0
      border none
      line-height normal
      font-size fontSize*1.2

  .about
    display flex
    flex-wrap wrap
    justify-content center

    > p
      width 100%

    > article
      margin 10px
      background colBackground
      text-align center
      padding 1em

      > img
        height 100px

      > h2
      > h3
        margin 0
        border none
        line-height normal

      > h2
        margin-top 1em
        font-size fontSize*1.2

      > h3
        font-size fontSize
