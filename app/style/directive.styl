.registration

  h3
    font-size 1.2em
    margin 0
    font-weight normal

    .input-append
      margin-bottom 0px
      line-height 1.2em

      input
        text-align right

  .danceClasses
    display -webkit-flex
    -webkit-flex-flow row wrap

  .danceClass
    display block
    padding 5px 10px
    > *
      padding 0.2em 0.5em

    .hour
      display block
      font-size 0.8em
      color #888

  .danceClass:not(:last-child)
    border-right 1px solid #888

  .balance-low 
    color #FF952B

  .balance-right 
    color #24B532

  .payments 

    > *
      display -webkit-flex
      -webkit-flex-flow row

      > *
        -webkit-flex 1

    header
      text-align center

      .remove
        width 35px

      .receipt
        margin-left 4px
        padding 0 7px

    .total
      display block
      text-align right

      .input-append
        margin-bottom 0

        span:not(.add-on)
          padding 4px 6px
          font-size 14px
          width 60px
          display inline-block

    .type
      -webkit-flex none
      text-align right
      width 130px

      .dropup
        text-align left

    .receipt
      -webkit-flex none
      text-align center
      width 100px

    .receipt.invalid
      background-color #f89406
      color #fff

    .remove
      -webkit-flex none
      height 20px
      margin-right 5px

    .value
      -webkit-flex none
      width 100px

      input
        width 53px
        text-align right

.planning
  titleH = 20px
  groupH = 40px
  legendH = 30px

  width 100%
  height 100%
  box-sizing border-box
  padding-bottom titleH + groupH + legendH

  .time
    background-color #ccc
    color #fff
    text-align right
    width 6.5%

    .q0
      font-size 0.8em
      line-height 1em
      padding 0.2em
      text-align right

    .groups
      color transparent

  .day 
  .time
    box-sizing border-box
    display inline-block
    height 100%
    position relative
    margin-top 65px

  .day:not(:last-child)
    border-right 1px solid #ccc

  .quarter
    box-sizing border-box

  .quarter.q0
    border-top 1px solid #888
  .quarter.q2
    border-top 1px dashed #ccc

  .title
    text-align center
    background-color #aaa
    color #fff
    box-sizing border-box
    height titleH
    position absolute
    top -(titleH + groupH)
    width 100%

  .groups
    background-color #ccc
    color #fff
    display -webkit-flex
    -webkit-flex-flow row wrap
    height groupH
    position absolute
    top - groupH
    width 100%

    > *
      -webkit-flex 1
      text-align center
      overflow hidden
      margin auto 0
      padding 0.2em
      box-sizing border-box

  .danceClass
    position absolute
    overflow hidden
    white-space nowrap
    text-overflow ellipsis 
    text-align center
    cursor pointer

  .danceClass.selected
    background-color #666

  .legend
    text-align right
    display block
    height legendH

    h2
      display inline-block
      line-height 1em
      height auto
      font-size 0.9em
      font-weight normal

    > span
      font-size 0.9em
      padding 0 0.4em
      margin 0 0.4em
      display inline-block

for i in 2..7
  .planning.days{i} .day
    // 6.5% for time
    width unit((100 - 6.5) / i, '%')

for i in 6..20
  .planning.hours{i} 
    .quarter
      height unit(100 / (i * 4), '%')  
    
